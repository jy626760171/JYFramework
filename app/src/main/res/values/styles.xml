<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="base_title_bar_container_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="default_title_left_right_view_style" parent="base_title_bar_container_style">
        <item name="android:paddingLeft">@dimen/default_title_left_right_padding</item>
        <item name="android:paddingRight">@dimen/default_title_left_right_padding</item>
    </style>

    <style name="default_title_left_view_style" parent="default_title_left_right_view_style">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="default_title_right_view_style" parent="default_title_left_right_view_style">
        <item name="android:layout_gravity">right</item>
    </style>
</resources>
